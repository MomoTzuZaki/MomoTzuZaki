<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".Page2"
    android:background="@drawable/background2">
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024 elections"
        android:textAlignment="center"
        android:textSize="30dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Running Presidents: Rodrigo Duterte | Antonio Luna | Andres Bonifacio"
        android:textAlignment="viewStart"
        android:textSize="20sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Running Vice Presidents: Juan Luna | Emilio Aguinaldo | Gabriela Silang"
        android:textAlignment="viewStart"
        android:textSize="20sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="President"
        android:textAlignment="viewStart"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/pres"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter President Name"
        android:inputType="text" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vice President"
        android:textAlignment="viewStart"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/vicepres"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Vice President Name"
        android:inputType="text" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="submit"
        android:text="submit" />
</LinearLayout>